{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": false,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "client/js/modules/hatchSettings.js",
        "client/js/modules/progress.js",
        "client/js/renderContext.js",
        "drawings/shared/**/*.js",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "output",
        "dist"
    ]
}
